<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Saved Credit Cards</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="SDM\Valitor\Block\Customer\Savedtoken" name="saved_credit_card"
                   template="SDM_Valitor::saved_credit_card.phtml" cacheable="false">

            </block>
        </referenceContainer>
    </body>
</page>